{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/yourusername"
      ]
    },
    "truffaldino": {
      "command": "node",
      "args": [
        "mcp-server/dist/index.js"
      ],
      "cwd": "/Users/yourusername/path/to/truffaldino"
    },
    "your-custom-server": {
      "command": "python",
      "args": [
        "/path/to/your/server.py"
      ],
      "env": {
        "API_KEY": "${YOUR_API_KEY}"
      }
    }
  }
}